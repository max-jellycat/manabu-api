{
  "connection": "default",
  "collectionName": "words",
  "info": {
    "name": "Word"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "native": {
      "type": "string",
      "required": true
    },
    "hiragana": {
      "type": "string",
      "required": true
    },
    "kanji": {
      "type": "string",
      "required": true
    },
    "roumaji": {
      "type": "string",
      "required": true
    },
    "lists": {
      "via": "words",
      "collection": "list"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "words"
    },
    "tags": {
      "via": "words",
      "collection": "tag"
    }
  }
}
